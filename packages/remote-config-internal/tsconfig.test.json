{
  "extends": "./tsconfig.json",

  "include": ["test/**/*.ts", "vitest.config.ts", "test.setup.ts"],

  "compilerOptions": {
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": false
  }
}
